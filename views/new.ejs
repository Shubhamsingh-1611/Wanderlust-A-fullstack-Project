<% layout("/layouts/boilerplate.ejs")%>
<body>
    
    <div class="row">
        <!-- row claa ka matlab hai ke sara content ek row me ana chaiye -->
        <div class="col-8 offset-2">
          
            <h1>Create new Listing</h1>
    <form method="post" action="/product" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
        <lable for="title" class="form-lable">Title</lable>
        <input type="text" class="form-control" placeholder="enter title" name="listing[title]" required>
        <div class="invalid-feedback">enter a valid title</div>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-lable">description</lable>
        <textarea name="listing[description]" placeholder="description" class="form-control" required></textarea>
        <div class="invalid-feedback">enter a short description</div>
         </div>
         <div class="mb-3">
            <lable for="image" class="form-lable">Upload Image</lable>
            <!-- form-lable and form-contol are prestyle class in boot-strap -->
        <input type="file" class="form-control"  name="listing[image]" required>
         </div>
         <div class="row ">
         <div class="mb-3 col-md-4">
            <!-- total col hai 12 jisme divide hota hai -->
            <lable for="price" class="form-lable">Price</lable>
        <input type="number" class="form-control" placeholder="enter price" name="listing[price]" required>
        <div class="invalid-feedback">enter a valid price</div>
    </div>
    <div class="mb-3 col-md-8">
        <!-- col-md-8 ka matlab hai ke jab md size ke bhar jaye to 8 col ocupy kare warna full he ocuppy kare -->
        <lable for="location" class="form-lable">Location</lable>
        <input type="text" class="form-control" placeholder="enter location" name="listing[location]" required>
        <div class="invalid-feedback">enter a Location</div>
    </div>
</div>
    <div class="mb-3">
        <lable for="country" class="form-lable">Country</lable>
        <input type="text" class="form-control" placeholder="enter country" name="listing[country]" required>
        <div class="invalid-feedback">enter a valid country</div>
    </div>
        <button class="btn btn-dark">Add</button>
        <br> <br> <br> <br>

    </form>
</div>
</div>
    
</body>
